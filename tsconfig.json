{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"noEmit": true,
		"allowJs": true,
		"checkJs": true,
		
		/* Path Aliases */
		"baseUrl": ".",
		"paths": {
			"@styles/*": ["styles/*"]
		},

		/* Preact Config */
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"skipLibCheck": true,
	},
	"include": ["node_modules/vite/client.d.ts", "**/*"]
}
